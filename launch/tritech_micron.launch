<launch>
   <node pkg="tf2_ros" type="static_transform_publisher" name="sonar_to_base" args="0 0 0 0 0 1 0 base_link sonar" />
  <arg name="port" default="/dev/pts/0" doc="serial port"/>
  <arg name="baudrate" default="115200" doc="serial baud rate"/>
  <arg name="frame" default="sonar" doc="frame ID"/>

  <node name="tritech_micron"
        pkg="tritech_micron"
        type="scan.py"
        output="screen"
        respawn="true"
        respawn_delay="5">
    <!-- Set ROS parameters -->
    <param name="port" value="$(arg port)" type="str"/>
    <param name="baudrate" value="$(arg baudrate)" type="int"/>
    <param name="frame" value="$(arg frame)" type="str"/>
  </node>
</launch>
